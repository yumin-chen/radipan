{
  "compilerOptions": {
    "rootDir": "src",
    "outDir": "dist",
    "module": "esnext",
    "moduleResolution": "node",
    "composite": true,
    "allowJs": true,
    "target": "esnext",
    "removeComments": true,
    "importHelpers": true,
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "paths": {
      "radipan/design-system": ["./node_modules/@radipan-design-system"],
      "radipan/design-system/*": ["./node_modules/@radipan-design-system/*"],
      "@radipan-design-system/*": ["./node_modules/@radipan-design-system/*"]
    }
  },
  "include": ["src/*"],
  "exclude": ["node_modules"]
}
