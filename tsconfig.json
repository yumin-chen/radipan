{
  "compilerOptions": {
    "rootDir": "src",
    "outDir": "dist",
    "composite": true,
    "allowJs": true,
    "target": "esnext",
    "removeComments": true,
    "importHelpers": true,
    "module": "commonjs",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "paths": {
      "@styled-system/*": ["./styled-system/*"],
    }
  },
  "include": ["src/*", "styled-system"],
  "exclude": ["node_modules"],
}
