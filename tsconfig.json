{
  "compilerOptions": {
    "rootDir": "src",
    "outDir": "dist",
    "composite": true,
    "allowJs": true,
    "target": "esnext",
    "removeComments": true,
    "importHelpers": true,
    "module": "commonjs",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "paths": {}
  },
  "include": ["src/*"],
  "exclude": ["node_modules", "styled-system"]
}
